{
    "manifest_version": 2,
    "name": "r3ads",
    "version": "0.0.1",
    "description": "Remove ads",
    "homepage_url": "https://github.com/rin2401/r3xt",
    "author": "rin2401",
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "logo.png",
            "24": "logo.png",
            "32": "logo.png"
        },
        "default_title": "r3ads",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://facebook.com/*", "*://*.facebook.com/*"],
            "js": ["r3ads.js"]
        }
    ],
    // "background": {
    //     "scripts": ["background.js"]
    // },
    "permissions": ["storage", "webRequest", "webRequestBlocking", "<all_urls>"]
}